class Question < ActiveRecord::Base
  belongs_to :adaptive_test
  has_many :answers
  
  
  PerPage = 2
  
  def self.page(pg)
    pg = pg.to_i
    self.order('id desc').offset((pg-1)*PerPage).limit(PerPage)
    'sdfsdfsd'
	end
	 
  def self.pgcount()
    count % PerPage == 0 ? count / PerPage : count / PerPage + 1
  end
    
end
