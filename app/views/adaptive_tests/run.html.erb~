  <% paginate_questions = @test_questions.paginate(:per_page => 1, :page => params[:page]) %>
  <% @pages_count = paginate_questions.count %>
  <% @next_page = params[:page].to_i+1 %>
  <% @current_page = params[:page].to_i %>
  <% paginate_questions.each do |question|%>
    <h1><%= question.title %></h1>
    
    <% question.answers.each do |answer| %>
      <input type="radio" name="answer"><span class="answers"><%= answer.title %></span><br/>
    <% end %>
    
    
    <% if @next_page < @pages_count -%>
      <%= link_to "Next", "#{adaptive_tests_path}/#{@adaptive_test.id}/run?page=#{@next_page}", :class => "link_button" %>
    <% end -%>
        
  <% end %>
  
