      <% if @next_page < @pages_count %>
        <%= link_to "Next question", "#{all_tests_path}/#{@all_test.id}/run?page=#{@next_page}", :class => "link_button", :onclick => "define_cheked_radio()" %>
      <% end %>
      
      
      
      
      
      <% if @next_page == @pages_count %>
        <%= link_to "Answer and show result", results_path(@all_test), :class => "link_button" %>
      <% end -%>
      
      
      
      
      <script type="text/javascript">
function define_cheked_radio(){ 
  var radiobuttons = document.getElementsByName("answer");
  var buttons_count = radiobuttons.length
  for (var i=0; i<buttons_count; i++){
    if (radiobuttons[i].checked){
      alert(radiobuttons[i].value)
    }
  }
}
</script>
